{
  "name": "ismart-platform",
  "version": "1.0.0",
  "scripts": {
    "watch:css": "nodemon --watch assets/css -e css --exec 'npm run build:css'",
    "build:css": "node tools/build/css-hash.js",
    "build:css:prod": "cross-env NODE_ENV=production npm run build:css",
    "watch:js": "nodemon --watch assets/js -e js --exec 'npm run build:js'",
    "build:js": "webpack --config webpack.config.js",
    "build:js:prod": "cross-env NODE_ENV=production npm run build:js",
    "clean:assets": "node tools/build/clean-assets.js",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "dev": "npm run watch",
    "setup:public-links": "node tools/build/setup-public-links.js",
    "build:images": "node tools/build/build-images.js",
    "lint": "eslint \"tools/**/*.js\" \"webpack.config.js\" \"postcss.config.js\" \"assets/js/**/*.js\"",
    "lint:css": "stylelint \"assets/css/main.css\" \"assets/css/base/**/*.css\" \"assets/css/sections/**/*.css\" \"assets/css/components/**/*.css\" \"assets/css/pages/**/*.css\"",
    "lint:php": "vendor/bin/phpstan analyse --no-progress",
    "format:php": "vendor/bin/php-cs-fixer fix",
    "format:php:check": "vendor/bin/php-cs-fixer fix --dry-run --diff",
    "format": "prettier --write \"package.json\" \"tools/**/*.js\" \"eslint.config.js\" \"stylelint.config.mjs\" \"webpack.config.js\" \"postcss.config.js\" \"assets/js/**/*.js\"",
    "format:check": "prettier --check \"package.json\" \"tools/**/*.js\" \"eslint.config.js\" \"stylelint.config.mjs\" \"webpack.config.js\" \"postcss.config.js\" \"assets/js/**/*.js\"",
    "test": "npm run validate-json && npm run test:php && npm run test:js",
    "test:php": "vendor/bin/phpunit --no-coverage",
    "test:js": "vitest run",
    "test:smoke": "node tests/smoke/smoke.js",
    "check": "npm run lint && npm run lint:css && npm run lint:php && npm run format:check && npm run format:php:check && npm run test",
    "build:dev": "npm run build:css && npm run build:js && npm run clean:assets && npm run setup:public-links",
    "build": "npm run check && cross-env NODE_ENV=production npm run build:css && cross-env NODE_ENV=production npm run build:js && npm run clean:assets && npm run setup:public-links",
    "create-section": "node tools/scaffold/create-section.js",
    "create-component": "node tools/scaffold/create-component.js",
    "create-page": "node tools/scaffold/create-page.js",
    "generate-favicons": "node tools/ops/generate-favicons.js",
    "init": "npm install && composer install && node tools/ops/init-env.js",
    "validate-json": "node tools/ops/validate-json.js data/json",
    "generate-llms": "php tools/ops/generate-llms-full.php > public/llms-full.txt",
    "fix-permissions": "sudo bash tools/ops/fix-permissions.sh",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,mjs}": "eslint --fix",
    "*.css": "stylelint --fix",
    "*.php": [
      "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --path-mode=intersection",
      "vendor/bin/phpstan analyse --no-progress"
    ],
    "*.{json,md}": "prettier --write"
  },
  "browserslist": [
    "defaults",
    "not dead"
  ],
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.4",
    "cssnano": "^7.1.2",
    "eslint": "^10.0.1",
    "favicons": "^7.2.0",
    "file-loader": "^6.2.0",
    "glob": "^13.0.3",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mini-css-extract-plugin": "^2.10.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-hash": "^3.0.0",
    "postcss-import": "^16.1.1",
    "postcss-loader": "^8.2.1",
    "postcss-preset-env": "^11.1.3",
    "postcss-url": "^10.1.3",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "style-loader": "^4.0.0",
    "stylelint": "^17.3.0",
    "stylelint-config-standard": "^40.0.0",
    "vitest": "^2.0.0",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1",
    "webpack-manifest-plugin": "^6.0.1"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "glightbox": "^3.3.1",
    "inputmask": "^5.0.9",
    "jquery": "^4.0.0",
    "swiper": "^12.1.1"
  }
}
