{
    "require": {
        "php": "^8.5",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "slim/twig-view": "^3.4",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.4",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.6",
        "twig/twig": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "php-cs-fixer/shim": "^3.94",
        "phpunit/phpunit": "^13.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/php/"
        }
    }
}